@page "/Contact"
@inject HttpClient Http


<PageTitle>Contact Us</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="IndexCSS.razor.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="table">
        <div class="heading_contact">
            <span>Contact Us</span>
            <h1>Coffee Shop</h1>
        </div>
        <div class="table-content">
            <table>
                <tr>
                    <td>Email</td>
                    <td><a href="mailto:coffeeshop@gmail.com">coffee123@gmail.com</a></td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td><a href="tel:+19543354565">+1 954 - 335 - 4565</a></td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td><a href="https://maps.app.goo.gl/GL2e3hvFUtnhPVyg8">2256 S University Drive, Davie, FL 33324 </a></td>
                </tr>
            </table>
        </div>
        <div class="google-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d114674.51371199735!2d-80.30067561218631!3d26.08002644345541!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d907b7c018cb6d%3A0x91df8ce3dfc535db!2sCrema%20Gourmet%20Espresso%20Bar!5e0!3m2!1sen!2sus!4v1700784046241!5m2!1sen!2sus"
                    width="600" height="450" style="border:0;"
                    allowfullscreen="" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        
    </div>
    <main>
        <section class="contact-form">
            <div class="container">
                <p>
                    Fill out the form below to get in touch with one of out team
                    members. We will try to get back to you within 48 hours. If we do not
                    reply within that time, please feel free to use the form again.
                </p>
                <form>
                    <div class="form-group">
                        <label for="firstname">First Name: </label>
                        <input type="text" name="firstname" id="firstname"
                               required class="form-element" placeholder="Linh" />
                    </div>
                    <div class="form-group">
                        <label for="firstname">Last Name: </label>
                        <input type="text" name="lastname" id="lastname"
                               required class="form-element" placeholder="Trinh" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address: </label>
                        <input type="email" name="email" id="email"
                               required class="form-element" placeholder="linhtrinh123@gmail.com" />
                    </div>
                    <div class="form-group full">
                        <label for="message">How can we help you?</label>
                        <textarea name="message" id="message"
                                  required class="form-element" placeholder="Tell us about your concerns."></textarea>
                    </div>
                    <div class="submit-btn">
                        <input type="submit" value="SUBMIT" />
                    </div>
                </form>
            </div>
        </section>
    </main>

    <footer>
        <section class="footer" id="footer">
            <div class="social">
                <a href="#" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-instagram"></a>
                <a href="mailto:coffeeshop@gmail.com" class="fa fa-google"></a>
            </div>
            <div class="links">
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Use</a>
                <a href="#">Our Company</a>
                <p>&#169;CoffeeShop All Right Reserved.</p>
            </div>
        </section>
    </footer>
</body>
</html>



